<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:id="@+id/rl_help_view"
                android:visibility="gone"
                android:background="#40000000"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="@color/b1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:text="客户帮助"
                android:textStyle="bold"
                android:textSize="@dimen/z3"
                android:layout_margin="@dimen/border_padding_10"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
                android:text="客户微信号："
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
                android:text="客户QQ号："
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_weixin"
                android:text="复制微信号"
                android:textColor="@color/b1"
                android:gravity="center"
                android:layout_margin="@dimen/border_padding_5"
                android:padding="@dimen/border_padding_10"
                android:background="@drawable/bg_copy_blue"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_qq"
                android:text="复制QQ号"
                android:gravity="center"
                android:layout_margin="@dimen/border_padding_5"
                android:textColor="@color/b1" android:padding="@dimen/border_padding_10"
                android:background="@drawable/bg_copy_blue"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView
                android:id="@id/tv_canser"
                android:text="取消"
                android:gravity="center"
                android:layout_margin="@dimen/border_padding_5"
                android:textColor="@color/b1" android:padding="@dimen/border_padding_10"
                android:background="@drawable/bg_canser"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
