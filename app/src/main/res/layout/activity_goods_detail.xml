<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <include layout="@layout/common_title"/>

            <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y600"
                    android:id="@+id/iv_goods_pic"
                    android:scaleType="fitXY"
            />

            <LinearLayout
                    android:background="@color/b1"
                    android:orientation="vertical"
                    android:padding="@dimen/border_padding_10"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/tv_goods_title"
                          android:textSize="@dimen/z3"
                />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/tv_goods_intro"
                          android:textColor="@color/colorRed"
                />

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/tv_goods_price"
                              android:textColor="@color/colorRed"
                    />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/tv_goods_count"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"
                              android:textSize="@dimen/z5"
                              android:layout_marginRight="@dimen/border_padding_10"
                              android:textColor="@color/w2"
                    />
                </RelativeLayout>
            </LinearLayout>

          <RelativeLayout
                  android:id="@+id/rl_more"
                    android:padding="@dimen/border_padding_10"
                  android:onClick="onclick"
                    android:layout_marginTop="@dimen/border_padding_10"
                    android:background="@color/b1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:text="查看图文详情"
                        android:id="@+id/tv_detail"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                />
                <TextView
                        android:layout_toRightOf="@+id/tv_detail"
                        android:textColor="@color/w6"
                        android:text="（点击可展开）"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                />

              <ImageView
android:id="@+id/iv_more"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:src="@mipmap/down"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </RelativeLayout>

            <com.github.lzyzsd.jsbridge.BridgeWebView
                    android:id="@+id/wv_show"
                    android:visibility="gone"
                    android:layout_width="match_parent" android:layout_height="match_parent"/>

            <RelativeLayout
                    android:padding="@dimen/border_padding_10"
                    android:layout_marginTop="@dimen/border_padding_10"
                    android:background="@color/b1"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_rec"
                        android:layout_centerHorizontal="true"
                        android:text="———— 精品推荐 ————"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                />

                <com.bigpush.view.MyGridView
                        android:layout_marginBottom="@dimen/y100"
                        android:layout_below="@+id/tv_rec"
                        android:id="@+id/gv_rec"
                        android:numColumns="2"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
            android:layout_alignParentBottom="true"
            android:text="@string/goods_accept"
            android:background="@drawable/bg_select"
            android:gravity="center"
            android:padding="@dimen/border_padding_10"
            android:textColor="@color/w4"
            android:layout_margin="@dimen/border_padding_10"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

</RelativeLayout>
