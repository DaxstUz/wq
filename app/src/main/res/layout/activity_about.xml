<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:id="@+id/ll_page"
              android:clickable="true"
              android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:background="@color/colorRed"
                    android:layout_height="40dp">

        <ImageView
                android:id="@+id/iv_back"
                android:onClick="onclick"
                android:layout_marginLeft="@dimen/border_padding_10"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/x50"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@mipmap/back"
        />

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="关于"
                android:textColor="@color/b1"
                android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <ImageView
            android:id="@+id/iv_version"
            android:src="@mipmap/wqicon"
            android:layout_marginTop="@dimen/border_padding_10"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/x300" android:layout_height="@dimen/x300"/>
    <TextView
            android:id="@+id/tv_version"
            android:padding="@dimen/border_padding_10"
            android:text="版本： 1.2.2 "
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_time"
            android:text="2017-11-20"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

<TextView
        android:text="@string/about_content"
        android:padding="@dimen/border_padding_10"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>
