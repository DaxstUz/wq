<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/b1">

    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/masonry_item_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x300"
                android:adjustViewBounds="true"
                android:src="@mipmap/wq"
                android:scaleType="fitXY"/>
        <TextView
                android:id="@+id/tv_count"
                android:textSize="@dimen/z5"
                android:text="已售0件"
                android:gravity="center"
                android:padding="@dimen/border_padding_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/b1"
                android:background="#33000000"
                android:layout_alignParentBottom="true"
        />
    </RelativeLayout>
    <RelativeLayout
            android:padding="@dimen/border_padding_10"
            android:layout_width="match_parent" android:layout_height="@dimen/x310">
        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/iv_type"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/taobao"
                        android:scaleType="fitXY"
                />
                <TextView
                        android:text="65656565"
                        android:maxLines="1"
                        android:textSize="@dimen/z6"
                        android:id="@+id/masonry_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>

            <RelativeLayout
                    android:layout_marginTop="@dimen/border_padding_10"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_money"
                        android:textSize="@dimen/z6"
                        android:text="¥5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRed"
                />

                <TextView
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:id="@+id/tv_sal"
                        android:textSize="@dimen/z6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDivideLine"
                />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>