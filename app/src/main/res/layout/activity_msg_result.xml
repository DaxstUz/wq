<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:background="@color/colorRed"
                    android:layout_height="40dp">

        <ImageView
                android:id="@+id/iv_back"
                android:onClick="onclick"
                android:paddingLeft="@dimen/border_padding_10"
                android:paddingRight="@dimen/x40"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@mipmap/back"
        />

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/b1"
                android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <LinearLayout
            android:layout_margin="@dimen/border_padding_10"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_goods"
                android:onClick="onclick"
                android:paddingLeft="@dimen/border_padding_10"
                android:paddingRight="@dimen/border_padding_10"
                android:paddingTop="@dimen/border_padding_5"
                android:paddingBottom="@dimen/border_padding_5"
                android:background="@drawable/bg_btn_default"
                android:layout_marginRight="@dimen/border_padding_10"
                android:layout_marginLeft="@dimen/border_padding_10"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="商品"
                android:textColor="@color/b1"
        />

        <TextView
                android:id="@+id/tv_consult"
                android:onClick="onclick"
                android:padding="@dimen/border_padding_5"
                android:background="@drawable/bg_btn_select"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="资讯"
                android:textColor="@color/b1"
        />
    </LinearLayout>

    <FrameLayout
            android:id="@+id/realtabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

</LinearLayout>
