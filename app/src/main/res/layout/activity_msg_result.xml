<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:background="@color/colorRed"
                    android:layout_height="40dp">

        <ImageView
                android:id="@+id/iv_back"
                android:onClick="onclick"
                android:paddingLeft="@dimen/border_padding_10"
                android:paddingRight="@dimen/x40"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@mipmap/back"
        />

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/b1"
                android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <RadioGroup
android:background="@drawable/bg_msg_title"
            android:layout_margin="@dimen/border_padding_10"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

        <RadioButton
                android:checked="true"
                android:button="@null"
                android:id="@+id/tv_goods"
                android:onClick="onclick"
                android:paddingLeft="@dimen/x100"
                android:paddingRight="@dimen/x100"
                android:paddingTop="@dimen/border_padding_5"
                android:paddingBottom="@dimen/border_padding_5"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="商品"
                android:background="@drawable/btn_msg_title_left"
                android:textColor="@drawable/textcolor2"
        />

        <RadioButton
                android:button="@null"
                android:id="@+id/tv_consult"
                android:onClick="onclick"
                android:paddingLeft="@dimen/x100"
                android:paddingRight="@dimen/x100"
                android:paddingTop="@dimen/border_padding_5"
                android:paddingBottom="@dimen/border_padding_5"
                android:background="@drawable/btn_msg_title_right"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="资讯"
                android:textColor="@drawable/textcolor2"
        />
    </RadioGroup>

    <FrameLayout
            android:id="@+id/realtabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

</LinearLayout>
